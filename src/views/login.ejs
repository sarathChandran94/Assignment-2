        <script>
            var email = document.getElementById('email');
            var pass = document.getElementById('pass');
            var frm = document.getElementsByClassName('form-group');
            var text = document.getElementById('help-text');
            var regexpEmail = /^([\w\.\-]+)@([\w\-]+)\.([a-z]{2,3})(\.[a-z]{2,3})?$/g;
            var regexpPw = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).{8,}$/g;

            let mailValidate = () => {
                if( email.value === '' && regexpEmail.test(email.value) === false ) {
                    frm[1].classList.add('has-error');
                    return false;
                }
                frm[1].classList.remove('has-error');
                frm[1].classList.add('has-success');
                return true;
            }


            let passValidate = () => {
                if( pass.value === '' && regexpPw.test(pass.value) === false ) {
                    frm[3].classList.add('has-error');
                    return false;
                }
                frm[3].classList.remove('has-error');
                frm[3].classList.add('has-success');
                return true;
            }


            let validate = () => {

                if(mailValidate() && passValidate()) {
                    text.classList.remove('show');
                    text.classList.add('invisible');
                    return true;
                }
                text.classList.remove('invisible');
                text.classList.add('show');
                return false;
            }

            email.addEventListener('blur',mailValidate);
            pass.addEventListener('blur',passValidate);

        </script>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
