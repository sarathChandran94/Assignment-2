        <script>
            let uName = document.getElementById('uName');
            let uNameRegExp = /^[?=A-Za-z]+[?=0-9]*[\s\.\-]?[?=A-Za-z]+[?=0-9]*$/g;

            let email = document.getElementById('email');
            let emailRegExp = /^([\w\.\-]+)@([\w\-]+)\.([a-z]{2,3})(\.[a-z]{2,3})?$/g;

            let phone = document.getElementById('phone');
            let phoneRegExp = /^([0-9]{3}[\-\.\s]?[0-9]{3}[\-\.\s]?[0-9]{4})$/g;

            let pass = document.getElementById('pass');
            let passRegExp = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).{8,}$/g;

            let pass2 = document.getElementById('pass2');
            let formGroup = document.getElementsByClassName('form-group');

            let uNameVal = () => {
                if( uName.value === '' && uNameRegExp.test(uName.value) === false ) {
                    formGroup[1].classList.add('has-error');
                    return false;
                }
                formGroup[1].classList.remove('has-error');
                formGroup[1].classList.add('has-success');
                return true;
            }

            let emailVal = () => {
                if( email.value === '' && emailRegExp.test(email.value) === false ) {
                    formGroup[3].classList.add('has-error');
                    return false;
                }
                formGroup[3].classList.remove('has-error');
                formGroup[3].classList.add('has-success');
                return true;
            }

            let phoneVal = () => {
                if( phone.value === '' && phoneRegExp.test(phone.value) === false ) {
                    formGroup[5].classList.add('has-error');
                    return false;
                }
                formGroup[5].classList.remove('has-error');
                formGroup[5].classList.add('has-success');
                return true;
            }

            let passVal = () => {
                if( pass.value === '' && passRegExp.test(pass.value) === false ) {
                    formGroup[7].classList.add('has-error');
                    return false;
                }
                formGroup[7].classList.remove('has-error');
                formGroup[7].classList.add('has-success');
                return true;
            }

            let pass2Val = () => {
                if( pass.value !== pass2.value ) {
                    formGroup[9].classList.add('has-error');
                    return false;
                }
                formGroup[9].classList.remove('has-error');
                formGroup[9].classList.add('has-success');
                return true;
            }

            let validate = () => {
                if( uNameVal() && emailVal() && phoneVal() && passVal() && pass2Val() ) {
                    return true;
                }
                return false;
            }

            uName.addEventListener('blur',uNameVal);
            email.addEventListener('blur',emailVal);
            phone.addEventListener('blur',phoneVal);
            pass.addEventListener('blur',passVal);
            pass2.addEventListener('blur',pass2Val);

        </script>
